class Solution {
    public int maxSubArrayLen(int[] nums, int k) {
        Map<Integer, Integer> sumMap = new HashMap<>();
        sumMap.put(0, -1);
        int res = 0;
            
        for (int i = 0, sum = 0; i < nums.length; i++) {
            sum += nums[i];
            if (sumMap.containsKey(sum - k)) {
                res = Math.max(i - sumMap.get(sum - k), res);
            }
            sumMap.putIfAbsent(sum, i); 
        }
        
        return  res;
    }
}
